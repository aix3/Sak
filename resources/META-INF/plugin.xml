<idea-plugin version="2">
  <id>com.your.company.unique.plugin.id</id>
  <name>Plugin display name here</name>
  <version>1.0</version>
  <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <idea-version since-build="162" until-build="162.*"/>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
      <applicationService serviceInterface="com.everhomes.ideaplugin.config.IdeaToolsSetting"
                          serviceImplementation="com.everhomes.ideaplugin.config.IdeaToolsSetting"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
      <action id="ideaplugin.UnitTool" class="com.everhomes.ideaplugin.unittool.UnitToolAction" text="UnitTool">
          <add-to-group group-id="EditorPopupMenu" anchor="last"/>
      </action>
      <action id="ideaplugin.DocComment" class="com.everhomes.ideaplugin.doccomment.DocCommentAction" text="DocComment">
          <add-to-group group-id="GenerateGroup" anchor="last"/>
      </action>
      <action id="ideaplugin.RestAPI" class="com.everhomes.ideaplugin.restapi.RestAPIAction" text="RestAPI">
          <add-to-group group-id="EditorPopupMenu" anchor="last"/>
      </action>
  </actions>

    <application-components>

    </application-components>
</idea-plugin>