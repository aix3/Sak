<idea-plugin version="2">
  <id>com.everhomes.sak</id>
  <name>Sak</name>
  <version>0.0.3-beta</version>
  <vendor email="xq.tian@zuolin.com" url="http://www.zuolin.com">ZL</vendor>

  <description><![CDATA[
      sak (Swiss Army knife)<br>
      Make your code more efficient, enjoy.
    ]]></description>

  <!--<idea-version since-build="162" until-build="162.*"/>-->

  <change-notes><![CDATA[
      2017-05-25: It is beta version, just call him 0.0.3-beta<br>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
      <applicationService serviceInterface="com.everhomes.sak.config.IdeaToolsSetting"
                          serviceImplementation="com.everhomes.sak.config.IdeaToolsSetting"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
      <action id="ideaplugin.GenUnit" class="com.everhomes.sak.unittool.UnitToolAction" text="GenUnit">
          <add-to-group group-id="EditorPopupMenu" anchor="last"/>
      </action>
      <action id="ideaplugin.DocComment" class="com.everhomes.sak.doccomment.DocCommentAction" text="DocComment">
          <add-to-group group-id="GenerateGroup" anchor="last"/>
      </action>
      <action id="ideaplugin.CopyAPI" class="com.everhomes.sak.restapi.RestAPIAction" text="CopyAPI">
          <add-to-group group-id="EditorPopupMenu" anchor="last"/>
      </action>
  </actions>

    <application-components>

    </application-components>
</idea-plugin>